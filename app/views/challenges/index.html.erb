<div class="mb-5">
  <% previous_image_id = nil %>
  <% @challenges.order(:boardgame_id).each do |challenge| %>
    <% if challenge.boardgame.photo.key != previous_image_id %>
      <div class="card">
        <%= cl_image_tag challenge.boardgame.photo.key, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= challenge.title %></h5>
          <p class="card-text"><%= challenge.description %></p>
        </div>
      </div>
      <% previous_image_id = challenge.boardgame.photo.key %>
    <% else %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= challenge.title %></h5>
          <p class="card-text"><%= challenge.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
