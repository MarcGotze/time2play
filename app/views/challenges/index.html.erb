<div class="container challenges">
  <% previous_image_id = nil %>
  <% @challenges.order(:boardgame_id).each do |challenge| %>
    <% if challenge.boardgame.photo.key != previous_image_id %>
      <div class="card mt-4">
        <div class="d-flex align-items-center challenge-card">
          <div class="challenge-img">
            <%= link_to boardgame_path(challenge.boardgame) do %>
              <%= cl_image_tag challenge.boardgame.photo.key, class: 'card-img-top challenges-banner' %>
            <% end %>
          </div>
          <div class="challenge-title">
            <h4><%= challenge.boardgame.title %></h4>
          </div>
        </div>
        <div class="card-body challenge-body">
          <div class="d-flex align-items-center">
            <i class="fa-solid fa-arrow-right-long" style="color: #ffffff;"></i>
            <h5 class="card-title"><%= challenge.title %></h5>
          </div>
        </div>
      </div>
      <% previous_image_id = challenge.boardgame.photo.key %>
    <% else %>
      <div class="card">
        <div class="card-body challenge-body">
          <div class="d-flex align-items-center">
            <i class="fa-solid fa-arrow-right-long" style="color: #ffffff;"></i>
            <h5 class="card-title"><%= challenge.title %></h5>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
