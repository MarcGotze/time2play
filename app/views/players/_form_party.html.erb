  <% @players.each do |player| %>
    <%= simple_form_for [@party, player], data: {
        form_party_end_target: 'playerForm',
        player_id: player.id
    } do |f| %>
      <%= f.input :score,
                  label: player.user.username,
                  placeholder: 'Renseigne le score',
                  class: 'score-field' %>
    <% end %>
  <% end %>
