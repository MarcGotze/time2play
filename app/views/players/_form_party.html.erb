  <% @players.each do |player| %>
    <%= simple_form_for [@party, player]  do |f| %>
      <%= f.input :score,
      label: player.user.username,
      placeholder: 'Renseigne le score',
      class: 'score-field' %>
      <%= f.submit "Valider",
      class: "btn btn-secondary"%>
    <% end %>
  <% end %>
