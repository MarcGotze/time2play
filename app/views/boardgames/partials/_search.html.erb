<div class="container mt-5">
  <%= simple_form_for :search, url: root_path, method: :get, data: { controller: "search" } do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required"
            type="text"
            name="search[query]"
            id="search_query"
            data-target="search.query"
            data-action="keyup->search#handleSubmit" />
      <button name="button" type="submit" class="btn btn-flat btn-primary" data-action="click->search#handleSubmit">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>
