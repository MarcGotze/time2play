<%= link_to boardgame_path(boardgame), class: "text-decoration-none" do %>
  <div class="card-trip">
    <img src="<%= cl_image_path @boardgame.image, height: 300, crop: :fit %>" />
    <div class="card-trip-infos">
      <div class= "content text-decoration-none">
        <h2 class= "title"><%= boardgame.title %></h2>
        <p class= "description"><%= boardgame.description %></p>
      </div>
      <h2 class="card-trip-pricing"></h2>
    </div>
  </div>
<% end %>
