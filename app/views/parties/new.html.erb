<div class="container">
  <h1>C'est parti pour jouer à <%= @boardgame.title %></h1>
  <div>
    <h2>Sélection des joueurs</h2>
    <% @boardgame.players.each do |player| %>
      <p><%= player.username %></p>
      <p><%= player.avatar %></p>
    <% end %>
  </div>
  <h2>C'est parti!</h2>
  <ul>
    <li>Roulette du premier joueur</li>
    <li>Lanceur de dès</li>
    <li>Sablier</li>
  </ul>
</div>
<%= console %>
